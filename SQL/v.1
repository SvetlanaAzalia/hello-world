CREATE TABLE PGB_service (
  ID       NUMBER(5, 0)     NOT NULL,
  NAME      VARCHAR2(200 BYTE),
  CONSTRAINT PK_SERVICE PRIMARY KEY (ID) USING INDEX TABLESPACE INDEXES STORAGE (INITIAL 64 K
                                                                                      NEXT 1 M
                                                                                      MAXEXTENTS UNLIMITED)
)
TABLESPACE USERS
STORAGE (INITIAL 64 K
         NEXT 1 M
         MAXEXTENTS UNLIMITED)
LOGGING;

